			MouseDown="PlanetDisplay_MouseDown"
			MouseMove="PlanetDisplay_MouseMove"
			MouseUp="PlanetDisplay_MouseUp"
                Visibility="Collapsed"
                />
        <Viewport3D x:Name="Planet3DDisaply" Margin="489,264,10,10"
